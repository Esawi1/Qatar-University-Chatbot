# Qatar University Chatbot - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-openai-service.openai.azure.com
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_API_VERSION=2024-05-01-preview

# Cosmos DB Configuration
COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443
COSMOS_KEY=your_cosmos_db_key_here
COSMOS_DB=your_database_name
COSMOS_CONTAINER=your_container_name
COSMOS_PARTITION_KEY=/sessionId

# Azure AI Search Configuration
SEARCH_ENDPOINT=https://your-search-service.search.windows.net
SEARCH_API_KEY=your_search_api_key_here
SEARCH_INDEX=your_index_name
SEARCH_SEMANTIC_CONFIG=default

# Storage Account Configuration
STORAGE_CONNECTION_STRING=your_storage_connection_string_here
STORAGE_CONTAINER_NAME=university-documents

# Optional: Performance and Security Settings
CACHE_TTL_SECONDS=3600
MAX_CONVERSATION_HISTORY=10
TEMPERATURE=0.1
MAX_SEARCH_RESULTS=5